<header>
  <h1>Eat Da Burger!<span><img src="../public/assets/img/burger.PNG" class="burgerPic" alt="burger" /></span></h1>
</header>

<div class="container">
    <div class="burgers">
        <h3 class="burgers-title">Burgers</h3>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-of-burgers rounded">{{this.burger_name}} <button id="devourBtn" class="devourBtn btn-primary rounded"
                    data-id="{{this.id}}">Devour it!!</button></li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="burgers">
        <h3 class="burgers-title">Devoured Burgers</h3>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li class="list-of-eaten-burgers">{{this.burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
  </div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-text" name="name">
  </div>

  

  <button type="submit" id="submit">Add Burger</button>
</form>